{% extends 'layout.njk' %}

{% block content %}
<div style="margin-top: 20px; margin-bottom: 20px">
    <div class="form-group" >
        <label for="title">Title</label>
        <input id="title" class="form-control" name="title" title="title">
    </div>
    <div class="form-group">
        <label for="author">Author</label>
        <input id="author" class="form-control" name="author" title="author">
    </div>
    <div class="form-group">
        <label for="publisher">Publisher</label>
        <input id="publisher" class="form-control" name="publisher" title="publisher">
    </div>
    <button id="search-advance" type="submit" class="btn btn-primary">Search</button>
</div>
<div>
    <ul id="list-books" class="list-group"></ul>
</div>
<script id="book-template" type="text/html">
    <li class="list-group-item">
        <a id="a" href="/book/:id:">:bookName: - :author:</a>
    </li>
</script>
<script src="js/search-advance.js"></script>
{% endblock %}
