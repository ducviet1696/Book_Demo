<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Library</title>
    <script
            src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
    <script src="js/search-advance.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>
    <div class="container-fluid">
        <header><h1>Library</h1></header>
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <ul class="navbar-nav">
                <li class="nav-item active"><a href="/" class="nav-link">Home</a></li>
                <li class="nav-item active"><a href="/create" class="nav-link">Create</a></li>
                <li class="nav-item active"><a href="/search" class="nav-link">Search advanced</a></li>
            </ul>
        </nav>
        <section>
            <div class="row">
                <div class="col-xs-6 col-md-4"></div>
                <div class="col-md-4 col-md-offset-4">
                    <div class="form-group" >
                        <label for="title">Title</label>
                        <input id="title" class="form-control" name="title" title="title">
                    </div>
                    <div class="form-group">
                        <label for="author">Author</label>
                        <input id="author" class="form-control" name="author" title="author">
                    </div>
                    <div class="form-group">
                        <label for="publisher">Publisher</label>
                        <input id="publisher" class="form-control" name="publisher" title="publisher">
                    </div>
                    <button id="search-advance" type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
            <div class="col-xs-6 col-md-4"></div>
            <div>
                <ul id="list-books" class="list-group"></ul>
            </div>
        </section>
    </div>
</body>
<script id="book-template" type="text/html">
    <li class="list-group-item">
        <a id="a" href="/book/:id:">:bookName: - :author:</a>
    </li>
</script>
</html>